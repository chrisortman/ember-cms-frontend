      <div class="field">
        {{input class="question-title" type="text" placeholder="How tall are you?"}}
      </div>

      <div class="field">
        <select class="ui dropdown" onchange={{action "changeAnswerType" value="target.value"}}>
          {{#each-in allAnswerTypes as |group items|}}
            <optgroup label="{{ group }}">
              {{#each items as |item|}}
                <option>{{ item }}</option>
              {{/each}}
            </optgroup>
          {{/each-in}}
        </select>
      </div>

      {{ answer-specific-fields answerType=answerType }}

      <div class="field">
        <div class="ui checkbox">
          <input type="checkbox" tabindex="0" class="hidden">
          <label>Required</label>
        </div>
      </div>
{{yield}}
